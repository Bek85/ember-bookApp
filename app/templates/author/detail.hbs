{{page-title 'Detail'}}
<div class="slide-out-bg"></div>
<div class="slide-out">
  <div class="slide-out-card">
    <LinkTo @route="author" class="btn-back">
      <span class="sr-only">
        Back
      </span>
      ‚Üê
    </LinkTo>
    <div class="slide-out-heading">
      <div class="title">
        <h3>
          {{this.model.author}}
        </h3>
        <div class="actions">
          <LinkTo
            @route="author.edit"
            @model={{this.model}}
            class="btn btn-pop"
          >
            Edit
          </LinkTo>
          <button
            class="btn-recessed"
            type="button"
            {{on 'click' (fn this.deleteAuthor this.model.id)}}
          >
            Delete
          </button>
        </div>
      </div>
    </div>
    <div class="slide-out-content"></div>
  </div>
</div>
